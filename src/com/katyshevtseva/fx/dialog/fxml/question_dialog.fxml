<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <center>
        <GridPane alignment="CENTER">
            <Label fx:id="questionLabel"/>
        </GridPane>
    </center>

    <bottom>
        <VBox>
            <Pane maxHeight="15" minHeight="15"/>
            <GridPane alignment="CENTER" hgap="30" vgap="30">
                <Button fx:id="yesButton" text="Yes" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Button fx:id="noButton" text="No" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            </GridPane>
            <Pane maxHeight="30" minHeight="30"/>
        </VBox>
    </bottom>

</BorderPane>
